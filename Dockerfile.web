FROM python:3.12-slim

WORKDIR /app

# Install dependencies
RUN pip install streamlit requests websockets

# Copy Web App
COPY mini_nebulus/web ./mini_nebulus/web

# Expose Streamlit Port
EXPOSE 8501

# Run the app
CMD ["streamlit", "run", "mini_nebulus/web/app.py", "--server.address=0.0.0.0"]
