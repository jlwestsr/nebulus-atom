# Nebulus Swarm Environment Configuration
# Copy this file to .env.swarm and fill in the values

# =============================================================================
# Slack Configuration (Required)
# =============================================================================
# Bot OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# App-Level Token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token

# Channel ID to monitor (starts with C)
SLACK_CHANNEL_ID=C0123456789

# =============================================================================
# GitHub Configuration (Required)
# =============================================================================
# Personal Access Token or GitHub App Token
GITHUB_TOKEN=ghp_your_token

# Comma-separated list of repos to watch
GITHUB_WATCHED_REPOS=owner/repo1,owner/repo2

# Default repository for commands without explicit repo
GITHUB_DEFAULT_REPO=owner/main-repo

# =============================================================================
# LLM Backend Configuration
# =============================================================================
# Nebulus/Ollama server URL
NEBULUS_BASE_URL=http://192.168.4.30:8080/v1

# Model to use for Minions
NEBULUS_MODEL=qwen3-coder-30b

# Request timeout in seconds
NEBULUS_TIMEOUT=600

# Whether to use streaming (false for MLX servers)
NEBULUS_STREAMING=false

# =============================================================================
# Minion Configuration
# =============================================================================
# Maximum concurrent Minions
MAX_CONCURRENT_MINIONS=3

# Minion timeout in minutes
MINION_TIMEOUT_MINUTES=30

# =============================================================================
# Cron Configuration (Optional)
# =============================================================================
# Enable cron-triggered queue sweeps
CRON_ENABLED=true

# Cron schedule (default: 2 AM daily)
CRON_SCHEDULE=0 2 * * *

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: console (human-readable) or json (structured)
LOG_FORMAT=console

# Optional log file path (always JSON format)
# LOG_FILE=/var/log/overlord/overlord.log
