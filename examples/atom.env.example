# Nebulus Atom Environment Variables
# Copy this file to .env and modify for your deployment
# Or source it directly: source atom.env.example
#
# These variables override config file settings

# =============================================================================
# LLM Backend
# =============================================================================

# OpenAI-compatible API endpoint
# Tier 1 (Edge/MLX): http://localhost:8080/v1
# Tier 2 (Prime/TabbyAPI): http://localhost:5000/v1
# Docker: http://tabby:5000/v1 (service name)
ATOM_LLM_BASE_URL=http://localhost:5000/v1

# Model identifier (must exist on backend)
ATOM_LLM_MODEL=Meta-Llama-3.1-8B-Instruct-exl2-8_0

# API key (cloud providers require this)
ATOM_LLM_API_KEY=not-needed

# Request timeout in seconds
ATOM_LLM_TIMEOUT=300

# Enable streaming (true/false)
ATOM_LLM_STREAMING=true

# =============================================================================
# Connection Pool (Swarm Mode)
# =============================================================================

# Max concurrent LLM requests
# - TabbyAPI: 2-4 (ExLlamaV2 batching)
# - vLLM: 4-8 (native concurrent)
# - MLX: 1-2 (sequential)
# - Ollama: 1 (no concurrency)
ATOM_LLM_CONCURRENCY=2

# =============================================================================
# Vector Store (RAG)
# =============================================================================

# ChromaDB storage path
ATOM_VECTOR_STORE_PATH=.nebulus_atom/db

# Default collection name
ATOM_VECTOR_STORE_COLLECTION=codebase

# Embedding model
ATOM_VECTOR_STORE_EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# MCP Integration (Optional - Nebulus Appliances Only)
# =============================================================================

# MCP server URL for additional tools (LTM, document parsing)
# Leave empty/unset for standalone operation
# ATOM_MCP_URL=http://nebulus-core:8000/mcp

# =============================================================================
# Legacy Variables (Deprecated - Use ATOM_* instead)
# =============================================================================

# These still work for backwards compatibility but ATOM_* takes precedence
# NEBULUS_BASE_URL=http://localhost:5000/v1
# NEBULUS_MODEL=Meta-Llama-3.1-8B-Instruct-exl2-8_0
# NEBULUS_API_KEY=not-needed
# NEBULUS_TIMEOUT=300
# NEBULUS_STREAMING=true
